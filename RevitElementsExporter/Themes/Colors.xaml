<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Color x:Key="AccentColor">#FF2D6AE3</Color>
  <Color x:Key="AccentColorDark">#FF1F4FAF</Color>
  <Color x:Key="SurfaceColor">#FFF7F9FC</Color>
  <Color x:Key="PanelColor">#FFFFFFFF</Color>
  <Color x:Key="TextPrimaryColor">#FF0F172A</Color>
  <Color x:Key="TextSecondaryColor">#FF4B5563</Color>
  <Color x:Key="BorderColor">#FFE5E7EB</Color>

  <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
  <SolidColorBrush x:Key="AccentBrushDark" Color="{StaticResource AccentColorDark}" />
  <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
  <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}" />
  <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
  <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}" />
  <SolidColorBrush x:Key="BorderBrushLight" Color="{StaticResource BorderColor}" />
</ResourceDictionary>
