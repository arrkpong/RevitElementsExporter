<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <!-- Dark Mode Color Palette -->
  
  <!-- Accent Colors (same as light for consistency) -->
  <Color x:Key="AccentColor">#FF818CF8</Color>
  <Color x:Key="AccentColorLight">#FFA5B4FC</Color>
  <Color x:Key="AccentColorDark">#FF6366F1</Color>
  <Color x:Key="AccentColorGlow">#44818CF8</Color>
  
  <!-- Success/Export Color -->
  <Color x:Key="SuccessColor">#FF34D399</Color>
  <Color x:Key="SuccessColorDark">#FF10B981</Color>
  
  <!-- Surface Colors - Dark -->
  <Color x:Key="SurfaceColor">#FF0F172A</Color>
  <Color x:Key="PanelColor">#FF1E293B</Color>
  <Color x:Key="CardColor">#FF1E293B</Color>
  <Color x:Key="InputBackgroundColor">#FF0F172A</Color>
  
  <!-- Text Colors - Light on Dark -->
  <Color x:Key="TextPrimaryColor">#FFF1F5F9</Color>
  <Color x:Key="TextSecondaryColor">#FF94A3B8</Color>
  <Color x:Key="TextMutedColor">#FF64748B</Color>
  
  <!-- Border Colors - Dark -->
  <Color x:Key="BorderColor">#FF334155</Color>
  <Color x:Key="BorderFocusColor">#FF818CF8</Color>
  
  <!-- Brushes -->
  <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
  <SolidColorBrush x:Key="AccentBrushLight" Color="{StaticResource AccentColorLight}" />
  <SolidColorBrush x:Key="AccentBrushDark" Color="{StaticResource AccentColorDark}" />
  <SolidColorBrush x:Key="AccentGlowBrush" Color="{StaticResource AccentColorGlow}" />
  
  <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
  <SolidColorBrush x:Key="SuccessBrushDark" Color="{StaticResource SuccessColorDark}" />
  
  <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
  <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}" />
  <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}" />
  <SolidColorBrush x:Key="InputBackgroundBrush" Color="{StaticResource InputBackgroundColor}" />
  
  <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
  <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}" />
  <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}" />
  
  <SolidColorBrush x:Key="BorderBrushLight" Color="{StaticResource BorderColor}" />
  <SolidColorBrush x:Key="BorderFocusBrush" Color="{StaticResource BorderFocusColor}" />
  
  <!-- Gradient Brushes -->
  <LinearGradientBrush x:Key="AccentGradientBrush" StartPoint="0,0" EndPoint="1,1">
    <GradientStop Color="#FF818CF8" Offset="0"/>
    <GradientStop Color="#FFA78BFA" Offset="1"/>
  </LinearGradientBrush>
  
  <LinearGradientBrush x:Key="SuccessGradientBrush" StartPoint="0,0" EndPoint="1,1">
    <GradientStop Color="#FF34D399" Offset="0"/>
    <GradientStop Color="#FF6EE7B7" Offset="1"/>
  </LinearGradientBrush>
  
  <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="1,0">
    <GradientStop Color="#FF6366F1" Offset="0"/>
    <GradientStop Color="#FF8B5CF6" Offset="0.5"/>
    <GradientStop Color="#FFA78BFA" Offset="1"/>
  </LinearGradientBrush>

</ResourceDictionary>
